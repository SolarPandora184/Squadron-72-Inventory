modules = ["web", "nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CAP Inventory Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Node Server"

[[workflows.workflow]]
name = "CAP Inventory Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Node Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node server/index.ts"
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
